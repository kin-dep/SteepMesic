<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.steepmesic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SteepMesic"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.PhoneLoginActivity"
            android:theme="@style/MusicTheme" />
        <activity
            android:name=".activity.LoginGuideActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SearchActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan" />
        <activity
            android:name=".activity.MusicListActivity"
            android:theme="@style/MusicTheme" />
        <activity
            android:name=".activity.MusicPlayActivity"
            android:theme="@style/MusicTheme"></activity>
    </application>

</manifest>